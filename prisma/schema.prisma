generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  image         String?
  accounts      Account[]
  sessions      Session[]
  schedules     Schedule[]
  queue         ContentQueue[]
  createdAt     DateTime  @default(now())
}

model Account {
  id                 String   @id @default(cuid())
  userId             String
  provider           String
  providerAccountId  String?
  access_token_enc   String?
  refresh_token_enc  String?
  token_expires_at   Int?
  scope              String?
  createdAt          DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  @@index([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@id([identifier, token])
}

model Schedule {
  id        Int     @id @default(autoincrement())
  userId    String
  dayOfWeek Int
  time      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  @@index([dayOfWeek, time])
}

model ContentQueue {
  id                Int     @id @default(autoincrement())
  userId            String
  googleDriveFileId String
  caption           String?
  status            String  @default("queued")
  postOrder         Int     @default(0)
  errorMessage      String?
  createdAt         DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
